		<!--Цвет текста-->    
		<Foreground>666600</Foreground>
		<!--Цвет линии-->
		<LineColor>660099</LineColor>
		 <!--Цвет заливкик-->
		<FillColor>0000FF</FillColor>	 
	</Colors>
	<Line>
		<!--Толщина линии-->
		<Thickness>2.0</Thickness>
